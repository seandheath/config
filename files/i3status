general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 1
}

order += "cpu_temperature 0"
order += "load"
order += "disk /"
order += "ethernet enp4s0"
order += "volume master"
order += "tztime local"

cpu_temperature 0 {
        format = "%degrees Â°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

load {
        format = "%5min Load"
}

disk "/" {
        format = "%free Free"
}

ethernet enp4s0 {
        format_up = "%ip"
        format_down = "Disconnected"
}

volume master {
        format = "%volume"
        format_muted = "Muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
		format = "%time"
		format_time = "%a %-d %b %H:%M"
}
